@{ ViewData["Title"] = "Home Page"; }

<div class="jumbotron" style="text-align: center">
    <h1 class="display-3">Welcome to the Digital Library!</h1>
    <p class="lead">Where you can borrow books online for free!</p>
    <hr class="my-4">
    <p class="lead">
        <a class="btn btn-secondary btn-lg" asp-area="" asp-controller="Book" asp-action="View" role="button">View List</a>
    </p>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/lib/img/lib1.jpg">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/img/lib2.jpg">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/img/lib3.jpg">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>